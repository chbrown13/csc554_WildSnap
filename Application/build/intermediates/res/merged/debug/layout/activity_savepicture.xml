    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please select the photos you want to add to your Gallery:"
        android:id="@+id/textView"
        android:layout_row="24"
        android:layout_column="21" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="9"
            android:layout_column="9">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView5"
                android:layout_row="4"
                android:layout_column="19"
                android:src="@drawable/squirell3"
                android:clickable="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_row="6"
                android:layout_column="5"
                android:checked="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_row="6"
                android:layout_column="18"
                android:checked="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:layout_row="6"
                android:layout_column="19"
                android:checked="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/save"
                android:layout_row="31"
                android:layout_column="19"
                android:layout_gravity="right"
                android:layout_marginRight="25dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView4"
                android:layout_row="4"
                android:layout_column="5"
                android:src="@drawable/squirell"
                android:clickable="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView6"
                android:layout_row="4"
                android:layout_column="18"
                android:src="@drawable/squirell2"
                android:clickable="true" />

        </GridLayout>
    </GridLayout>
