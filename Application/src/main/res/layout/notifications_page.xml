<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.samsung.android.sdk.camera.sample.cases.Notifications"
    android:background="#ffffff">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:text="Notifications"
        android:textSize="30dp"
        android:layout_weight="0.04"
        android:typeface="sans"
        android:autoText="false"
        android:selectAllOnFocus="false"
        android:textStyle="bold|italic"
        android:textColor="#809b33" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Nick commented on your photo!     5:45PM"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Achievement: Nature King!              7:59PM"
        android:layout_weight="0.04"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_weight="0.03"
        android:text="You reached 280 points!                   4:38PM"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Christa liked your photo!                 12:29PM"
        android:layout_weight="0.03"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/profile_page" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifications2"
        android:src="@mipmap/notify_icon"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/profile_page2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_page2"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/notifications2"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera2"
        android:src="@mipmap/camera_icon"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/notifications2"
        android:layout_toStartOf="@+id/notifications2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search2"
        android:src="@mipmap/search_icon"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/camera2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home2"
        android:src="@mipmap/home_icon"
        android:layout_alignTop="@+id/search2"
        android:layout_toStartOf="@+id/search2" />

</RelativeLayout>